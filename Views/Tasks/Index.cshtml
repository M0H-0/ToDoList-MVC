@model List<ToDoTask>
@Html.AntiForgeryToken()
<h1>Tasks</h1>
<a asp-action="Create" asp-controller="Tasks">Add Task</a>
@foreach (var task in Model){
 <div style="border: 2px solid black; margin-bottom: 10px; padding: 10px; display: flex;align-items: center;">
   <strong> @task.TaskName </strong>
   <input type="checkbox" class="check-box" data-id="@task.Id" @(task.IsDone?"checked":"")/>
   <div style="margin-left: auto;">
   <form asp-action="Update" asp-controller="Tasks" method="get" style="display: inline-block;">
    <input type="hidden" name="Id" value="@task.Id" />
    <button type="submit">Edit</button>
   </form>
   <form asp-action="Delete" asp-controller="Tasks" method="post" style="display: inline-block;">
   <input type="hidden" name="id" value="@task.Id" />
   <button type="submit">Delete</button>
   </form>
   </div>
 </div>
}
<script src="~/js/task-checkbox.js"></script>