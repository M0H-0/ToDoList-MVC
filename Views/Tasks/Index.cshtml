@model List<ToDoTask>
<h1>Tasks</h1>
<a asp-action="Create" asp-controller="Tasks">Add Task</a>
@foreach (var task in Model){
 <div style="border: 2px solid black; margin-bottom: 10px; padding: 10px">
   <strong> @task.TaskName </strong> 
   <input type="checkbox" disabled @(task.IsDone?"checked":"")/>
   <form asp-action="Update" asp-controller="Tasks" method="get">
    <input type="hidden" name="Id" value="@task.Id" />
    <button type="submit">Edit</button>
   </form>
   <form asp-action="Delete" asp-controller="Tasks" method="post">
   <input type="hidden" name="id" value="@task.Id" />
   <button type="submit">Delete</button>
   </form>
 </div>
}